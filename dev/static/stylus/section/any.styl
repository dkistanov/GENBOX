.any__title {
    max-width: 738px;
    margin: 0 auto 24px;
}

.any__list {
    display: flex;
}

.any__item {
    background: #FFFFFF;
    box-shadow: 0px -1.50022px 37.5056px rgba(0, 0, 0, 0.02), 0px 18.6074px 42.1768px rgba(0, 0, 0, 0.05);
    border-radius: 24.8099px 24.8099px 0px 0px;
    width: 25%;
    display: flex;
    flex-direction: column;
    padding: 20px 41px 31px;
}

.any__item-img {
    max-height: 209px;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
}

.any__item-title {
    padding-top: 24px;
    margin-top: 10px;
    border-top: 1px solid rgba(222,222,222,.54);
}