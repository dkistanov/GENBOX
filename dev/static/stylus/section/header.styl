
.header {
    background: #000;
    color: #FFFFFF;
    padding: 20px 0;
    margin-bottom: -151px;
}

.header__logo {
    display: flex;
    margin-right: 20px;
}

.logo__img {
    max-width: 246px;
    margin-right: 32px;
}

.logo__img img {}

.logo__desc {
    font-size: 13px;
    line-height: 16px;
    opacity: 0.7;
    max-width: 221px;
}

.header__top {
    margin-bottom: 26px;
    display: flex;
    justify-content: space-between;
}

.header__info-mail {
    font-size: 16px;
    line-height: 150%;
/* identical to box height, or 24px */
    letter-spacing: 0.05em;
    text-transform: lowercase;
    color: #A2ADEB;
}

.mail_icon i {
    margin-right: 9px;
    font-size: 12px;
    line-height: 150%;
/* identical to box height, or 18px */
    letter-spacing: -0.02em;
}
.header__info {
    display: flex;
    align-items: center;
    flex-grow: 1;
}

.header__info-list {
    font-family: 'Golos Text';
    font-weight: 500;
    font-size: 12px;
    line-height: 14px;
    letter-spacing: 0.055em;
    text-transform: uppercase;
    color: rgba(255,255,255,.4);
    margin-right: 9%;
    display: flex;
    margin-left: auto;
}

.header__info-item:not(:last-child) {margin-right: 22px;}

.header__info-item:last-child {
}

.header__info-item {
    display: inline-block;
}

.personal__item-link {
    color: #fff;
}

.header__bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.header__nav {
    display: flex;
    font-family: 'Golos Text',sans-serif;
    font-weight: 500;
    font-size: 14px;
    line-height: 17px;
/* identical to box height */
    letter-spacing: 0.055em;
    text-transform: uppercase;
    color: rgba(255,255,255,.7);
}

.nav__elem {
    transition: .3s all;
    padding: 17px 37px;
    border: 1px solid #FFFFFF;
    border-right: none;
    cursor: pointer;
}

.nav__elem:last-child {
    padding: 15px 20px;
    border-right: 1px solid #fff;
    border-radius: 0px 5px 5px 0px;
}

.nav__elem:first-child {
    border-radius: 5px 0 0 5px;
}
.nav__elem:last-child {
    border-left: 0;
}
.nav__elem:hover {
    background: #26A4CC;
    color: #fff;
}

.nav__elem-text.search-icon {
    font-size: 20px;
    line-height: 20px;
/* identical to box height */
    color: #FFFFFF;
}

.personal__item {
    margin-right: 22px;
    font-size: 25px;
    line-height: 25px;
    cursor: pointer;
    position: relative;
}

.personal__item:last-child {
    margin-right: 0;
}

.personal__list {
    display: flex;
}

.header__personal {
    display: flex;
    align-items: center;
    flex-grow: 1;
}

.personal__item-counter {
    position: absolute;
    top: -5px;
    right: -9px;
    font-family: Montserrat;
    font-weight: 500;
    font-size: 8px;
    line-height: 9px;
    letter-spacing: 0.03em;
    padding:3.5px 5.6px;
    background: #26A4CC;
    border-radius: 50%;
}

.header__tel {
    font-weight: 300;
    font-size: 20px;
    line-height: 150%;
/* identical to box height, or 30px */
    display: flex;
    text-align: right;
    color: #A9A9A9;
    display: flex;
    flex-direction: column;
    margin-left: 5%;
}
.tel_smaller 
    font-weight: normal;
    font-size: 12px;
    line-height: 15px;
    /* identical to box height */
    color: #A9A9A9;

.header__tel .fa-phone {
    margin-right: 9px;
}

.header__tel b {
    font-weight: 550;
    color: #fff;
}

.header__tel {
    margin-left: 20%;
}

.personal__list {
    margin-left: auto;
    padding-left: 20px;
}
.mail_icon span {
    border-bottom: 1px solid rgba(124,134,191,.4);
    padding-bottom: 4px;
}

.header__info-item:after {content: "\f107";display: inline-block;font-family: 'Font Awesome 5 Pro';font-size: 13.2632px;line-height: 13px;margin-left: 7px;}

.header__info-item {
    cursor: pointer;
}