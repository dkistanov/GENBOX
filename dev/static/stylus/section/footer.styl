.footer-wrp {
    display: flex;
}

.footer__left-content {
    display: flex;
    flex-direction: column;
}

.footer__logo {
    max-width: 270px;
    margin-right: 0
    margin-bottom: 39px
}
.footer__link {
    font-weight: bold;
    font-size: 15.7464px;
    line-height: 150%;
/* identical to box height, or 24px */
    letter-spacing: 0.03em;
    text-transform: uppercase;
    color: #2FAFFF;
    margin-bottom: 17px
}

.footer__link span {
    border-bottom: 1px solid rgba(47, 175, 255, 0.4);
}
.footer__copyright {
    font-size: 16px;
    line-height: 20px;
/* identical to box height */
    letter-spacing: 0.02em;
    color: #3E3E3E;
    opacity: 0.9;
    margin-top: 6px;
}

.footer {
    padding-bottom: 270px;
}

.footer__left-content {
    margin-right: 12%;
}

.footer__nav-title {
    font-family: 'Golos Text';
    font-size: 22px;
    font-weight: 600;
    line-height: 26px;
    letter-spacing: 0.055em;
    text-transform: uppercase;
    color: #232323;
    margin-bottom: 18px;
}

.footer__nav-list {
    display: flex;
}

.footer__nav-item {
    display: flex;
    flex-direction: column;
    margin-right: 100px;
}

.footer__nav {
    margin-right: 20px;
}

.footer__nav-link span {
    padding-bottom: 2px;
    border-bottom: 1px solid rgba(0, 0, 0, .3);
}

.footer__nav-link {
    font-family: 'Golos Text';
    margin-bottom: 16px;
}

.footer__nav-link:last-child {
    margin-bottom: 0;
}

.footer__nav-item:last-child {
    margin-right: 0;
}

.footer__right-content {
    margin-left: auto;
    display: flex;
    align-items: flex-start;
}

.footer__social-list {
    display: flex;
    margin-right: 45px;
    align-items: center;
}

.footer__social-item {
    margin-right: 10px;
}

.footer__social-item:last-child {
    margin-right: 0;
}

.footer__social-link {
    display: block;
}

.footer__social-link svg {
}

.footer__social-link svg path {
}

.footer__info {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    margin-top: -5px;
    text-align: end;
}

.footer__info-tel {
    font-weight: 300;
    font-size: 27.1739px;
    line-height: 150%;
    margin-bottom: 23px;
    color: #656565;

}

.footer__info-tel .tel_smaller {
    font-size: 16.3043px;
    line-height: 20px;
/* identical to box height */
    color: #656565;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.footer__info-tel .tel_smaller .fal {
    font-size: 12.4235px;
    line-height: 12px;
    color: #656565;
    margin-right: 9px;
}

.footer__info-tel b {
    font-weight: 550;
}

.footer__info-schedule {
    font-size: 16.3043px;
    line-height: 20px;
    color: #656565;
    margin-bottom: 18px;
}

.footer__info-dev span:first-child {
    margin-right: 8px;
}

.footer__info-dev {
    color: rgba(101, 101, 101, .7);
    font-size: 12px;
    line-height: 15px;
    display: flex;
    align-items: center;
    margin-bottom: 18px
}

.footer__info-dev .text_gold {
    font-weight: bold;
    font-size: 15px;
    line-height: 20px;
/* identical to box height, or 23px */
    letter-spacing: 0.03em;
    text-transform: uppercase;
    color: #B6945E;
}

.footer__info-dev .far {
    font-size: 16.1053px;
    line-height: 19px;
}
.footer__info-dev .text_gold span:first-child {
    border-bottom: 1px solid rgba(182, 148, 94, 0.4);
}

.footer__info-dev .text_gold {
    display: flex;
    align-items: center;
}
.footer__info-sitemap {
    font-family: 'Golos Text';
    font-style: normal;
    font-weight: 500;
    font-size: 14.3158px;
    line-height: 17px;
    letter-spacing: 0.055em;
    color: #3E3E3E;
    border-bottom: 1px solid rgba(0, 0, 0, .3);
}