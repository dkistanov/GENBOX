.services__title {
    max-width: 1126px;
    margin: 0 auto;
    text-align: center;
    margin-bottom: 55px;
}

.services__list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.services__item {
    width: calc((100% - 81px) / 4);
    margin-bottom: 27px;
    position: relative;
    overflow: hidden;
    height: 450px;
    border-radius: 33px 33px 0px 0px;
    display: flex;
    align-items: flex-end;
    
}

.services__item-img-back {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}

.services__item-img-front {
    position: absolute;
    top: 0;
    left: 50%;
    width: auto;
    z-index: -1;
    max-width: none;
    min-height: 272px;
    min-width: 100%;
    transform: translateX(-50%);
}

.services__item-content {
    min-height: 200px;
    padding: 17px 25px 17px;
    position: relative;
}

.services__item-title {
    font-weight: bold;
    font-size: 18px;
    line-height: 22px;
    color: #FFFFFF;
    margin-bottom: 5px;
}
.services__item-content:before {content: "";position: absolute;bottom: 0;left: 0;background: rgba(0, 0, 0, 0.3);backdrop-filter: blur(9px);width: 100%;height: 100%;z-index: -1;}

.services__item-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.services__item-desc {
    font-weight: 500;
    font-size: 18px;
    line-height: 22px;
    color: rgba(255,255,255,.8);
}