.modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1000;
    overflow: auto
    display: none
}

.modal__form {
    width: 580px;
    position: absolute;
    top: 50%;
    left 50%
    transform: translate(-50%,-50%)
}

.modal-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.3);
}
.modal__close {
    cursor: pointer;
    position: absolute;
    top: 20px;
    right: 20px;
    font-size: 24px;
    color: #0d0d0d;
    transition: .3s all;
}

.modal__close:hover {
    color: #26A4CC;
}

.diler__form .form__title {
    white-space: nowrap;
}

.diler__form .form__desc {
    max-width: 361px;
    margin-bottom: 43px;
}

.form_no-label-titles .form__label {
    margin-bottom: 25px;
}
.form_no-label-titles .form__label:last-child {
    margin-bottom: 0;
}
.form_center {
    text-align: center;
}
.form__desc {
    max-width: none;
    margin-bottom: 43px;
}

textarea.form__label-input {
    height: 205px;
    font-size: 18px;
}
.modal__form {
    max-height: 90%;
    overflow: auto;
    border-radius: 17px;
}
.form_default .form__label-input {
    font-size: 18px;
    line-height: 22px;
}