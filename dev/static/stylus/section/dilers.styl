.dilers__title {
    max-width: 1036px;
    margin:  0 auto;
    text-align: center;
    margin-bottom: 65px;
}

.dilers__map {
    height: 600px;
    position: relative;
}

.dilers__info-popup {
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    flex-direction: column;
    padding: 88px 70px 103px;
}

.dilers__buttons-popup {
    right: 0;
    position: absolute;
    bottom: 0;
}

.dilers__map-img {
    display: flex;
    height: 100%;
    justify-content: center;
    margin: 0 -70px;
}

.dilers__map-img img {
    height: 100%;
    width: auto;
    max-width: none;
    flex-grow: 1;
}

.dilers__info-title {
    font-weight: 600;
    font-size: 36.7055px;
    line-height: 48px;
/* or 131% */
    color: #3E3E3E;
    margin-bottom: 29px;
}

.dilers__info-mail {
    font-size: 24.0777px;
    line-height: 150%;
/* or 36px */
    letter-spacing: 0.05em;
    color: #26A4CC;
}
.dilers__info-mail.mail_icon span {
    border-bottom: 2px solid rgba(38, 164, 204, .4);
}

.dilers__info-mail.mail_icon i {
    font-size: 18.0583px;
    line-height: 150%;
/* identical to box height, or 27px */
    letter-spacing: -0.02em;
    margin-right: 8px;
}

.dilers__info-mail {
    margin-bottom: 44px;
}

.dilers__info-tel {
    font-weight: 300;
    font-size: 27.3333px;
    line-height: 150%;
/* identical to box height, or 41px */
    display: flex;
    align-items: center;
    text-align: right;
    color: #8F8F8F;
    font-family: 'HelveticaNeueCyr';
}

.dilers__info-tel b {
    font-weight: 550;
    color: #000;
    margin-left: 7px;
}

.tel_icon i {
    font-weight: 300;
    font-size: 16.4px;
    line-height: 16px;
    color: #A9A9A9;
    text-shadow: 0px 36.9px 92.9333px rgba(47, 175, 255, 0.31);
    margin-right: 14px;
}

.dilers__buttons-popup {
    padding: 56px 80px 45px;
    display flex
}
.dilers__buttons-link {
    display: block;
}
.dilers__buttons-link:first-child {
    margin-right: 32px
}
.dilers__buttons-link {
    display: block;
}

.dilers__buttons-item {
    min-width: 0;
    font-size: 12px;
    line-height: 150%;
/* identical to box height, or 18px */
    letter-spacing: 0.05em;
    padding: 30px 43px 26px;
    box-shadow: 0px 32.2766px 53.5319px rgba(38, 164, 204, 0.2), inset 0px 5.51064px 22.0426px rgba(255, 255, 255, 0.1);
}


.dilers {
    overflow: hidden;
    padding-bottom: 122px
}