.clients__title {
    max-width: 1350px;
    margin: 0 auto;
    text-align: center;
    margin-bottom: 28px;
}

.clients__desc {
    font-size: 20px;
    line-height: 24px;
    text-align: center;
    letter-spacing: 0.02em;
    color: #3E3E3E;
    opacity: 0.9;
    max-width: 976px;
    margin: 0 auto 75px;
}

.clients__list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-bottom: -23px;
}

.clients__item {
    background: #FFFFFF;
    box-shadow: 0px 24.8155px 56.2484px rgba(0, 0, 0, 0.06);
    border-radius: 33px;
    display: flex;
    align-items: center;
    width: calc((100% - 46px) / 3);
    margin-bottom: 23px;
    height: 199px;
    overflow: hidden;
}

.clients__item-title {
    font-weight: 600;
    font-size: 1.3vw;
    line-height: 33px;
    color: #0D0D0D;
    opacity: 0.76;
    padding: 15px 40px 15px 20px;
    word-break: break-word;
}

.clients__item-img {
    height: 100%;
    flex-shrink: 0;
    width: 268px;
    overflow: hidden;
    display: flex;
    justify-content: center;
    align-items: center;
}

.clients__item-img img {max-width: none;min-height: 100%;flex-grow: 1;}

.dignity {
    margin-top: 65px;
}

.dignity__list {
    display: flex;
    justify-content: space-between;
    padding: 0 4%;
}

.dignity__item {
    width: calc((100% - 12%) / 3);
}

.dignity__item-img {
    display: flex;
    justify-content: center;
    margin-bottom: 19px;
    height: 64px;
    align-items: center;
}

.dignity__item-desc {
    font-size: 18px;
    line-height: 24px;
    text-align: center;
    letter-spacing: 0.02em;
    color: #3E3E3E;
    opacity: 0.9;
}